{
    "version": 2,
    "framework": null,
    "builds": [
      {
        "src": "backend/goodforgood/wsgi.py",
        "use": "@vercel/python",
        "config": { "maxLambdaSize": "15mb" }
      },
      {
        "src": "frontend/build/**",
        "use": "@vercel/static"
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "backend/goodforgood/wsgi.py"
      },
      {
        "src": "/(.*)",
        "dest": "frontend/build/$1"
      }
    ],
    "env": {
      "PYTHON_VERSION": "3.9"
    }
  }